{
    "version": "8.6.3",
    "description": "A free source code editor and Notepad replacement that supports several languages.",
    "homepage": "https://notepad-plus-plus.org/",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v8.6.3/npp.8.6.3.portable.x64.zip",
            "hash": "9b13cf57df7cfe35955c01a3190494af35caaa8e76027865fd72ef38d2290ab0"
        },
        "arm64": {
            "url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v8.6.3/npp.8.6.3.portable.arm64.zip",
            "hash": "95a80ef9312c1024b8b4d2af41f019d514c9a92db55e50d590339bb788792a8a"
        }
    },
    "pre_install": [
        "'nativeLang.xml', 'session.xml' | ForEach-Object {",
        "    if (!(Test-Path \"$persist_dir\\$_\")) { New-Item \"$dir\\$_\" -ItemType File | Out-Null }",
        "}",
        "if (!(Test-Path \"$persist_dir\\langs.xml\")) {",
        "    Copy-Item \"$dir\\langs.model.xml\" \"$dir\\langs.xml\"",
        "}",
        "if (!(Test-Path \"$persist_dir\\stylers.xml\")) {",
        "    Copy-Item \"$dir\\stylers.model.xml\" \"$dir\\stylers.xml\"",
        "}"
    ],
    "bin": "notepad++.exe",
    "shortcuts": [
        [
            "notepad++.exe",
            "Notepad++"
        ]
    ],
    "persist": [
        "backup",
        "plugins",
        "userDefineLangs",
        "config.xml",
        "nativeLang.xml",
        "session.xml",
        "shortcuts.xml",
        "stylers.xml"
    ],
    "post_install": [
        "# Update shipped plugins",
        "if (Test-Path \"$dir\\plugins.original\") {",
        "    Copy-Item \"$dir\\plugins.original\\*\" \"$dir\\plugins\\\" -Recurse -Force",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/notepad-plus-plus/notepad-plus-plus"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v$version/npp.$version.portable.x64.zip"
            },
            "arm64": {
                "url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v$version/npp.$version.portable.arm64.zip"
            }
        },
        "hash": {
            "url": "$baseurl/npp.$version.checksums.sha256"
        }
    }
}
